<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/keyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key will appear here"
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/fetchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch Key"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/copyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Key"
            android:backgroundTint="#03DAC5"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/keyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Key"
            android:backgroundTint="#CCCCCC"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/ipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetching IP..."
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Key"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status will appear here"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#E0E0E0"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />
    </LinearLayout>
</ScrollView>
